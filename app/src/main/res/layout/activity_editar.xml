<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ferrannoguera.controlmascotes.Editar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOTO:"
        android:id="@+id/img"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#ff000000"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:id="@+id/photoButton"
        android:layout_marginRight="100dp"
        android:layout_alignBaseline="@+id/img"
        android:layout_alignBottom="@+id/img"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPCIONAL"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRACTAMENT ESPECIAL"
        android:id="@+id/textView7"
        android:layout_below="@+id/img"
        android:layout_alignParentStart="true"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ff000000"
        android:phoneNumber="false"
        android:password="false"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/photoViewer"
        android:layout_below="@+id/photoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myEditText"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="20dp"
        android:width="400dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ‘ADIR"
        android:id="@+id/button"
        android:onClick="addPet"
        android:width="200dp"
        android:layout_marginLeft="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atras"
        android:id="@+id/Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="back" />

</RelativeLayout>
