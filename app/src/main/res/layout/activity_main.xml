<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:longClickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control Mascotes"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="28dp"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afegir Mascota"
        android:id="@+id/AMasc"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="int2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veure Mascotes"
        android:id="@+id/VMasc"
        android:layout_below="@+id/AMasc"
        android:layout_alignStart="@+id/AMasc"
        android:layout_marginTop="60dp"
        android:onClick="intviewmasc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendari"
        android:id="@+id/Calendari"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/VMasc"
        android:layout_alignStart="@+id/VMasc"
        android:layout_alignEnd="@+id/AMasc"
        android:onClick="intcal"
        android:nestedScrollingEnabled="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CERRAR"
        android:id="@+id/button4"
        android:layout_below="@+id/Calendari"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:nestedScrollingEnabled="false"
        android:onClick="close" />

</RelativeLayout>
