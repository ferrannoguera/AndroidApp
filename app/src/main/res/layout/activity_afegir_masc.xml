<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ferrannoguera.controlmascotes.AfegirMasc"
    android:id="@+id/photobutton">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:id="@+id/textView2"
        android:focusableInTouchMode="false"
        android:textSize="20dp"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NomMasc"
        android:width="200dp"
        android:textSize="18dp"
        android:textIsSelectable="false"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:id="@+id/textView3"
        android:layout_below="@+id/NomMasc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:textColor="#ff000000"
        android:textSize="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NomTip"
        android:entries="@array/tiposanimals"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/NomMasc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nacimiento:"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:textColor="#ff000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÂº Chip"
        android:id="@+id/textView5"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/NumXip"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumXip"
        android:width="200dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:id="@+id/button"
        android:onClick="addPet"
        android:width="200dp"
        android:layout_alignTop="@+id/Back"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atras"
        android:id="@+id/Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="back" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d"
        android:layout_above="@+id/NumXip"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="10dp"
        android:width="35dp"
        android:inputType="numberDecimal"
        android:hint="DD"
        android:numeric="decimal"
        android:maxLength="2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m"
        android:layout_alignTop="@+id/d"
        android:layout_toEndOf="@+id/d"
        android:layout_marginLeft="20dp"
        android:width="40dp"
        android:hint="MM"
        android:inputType="numberDecimal"
        android:numeric="decimal"
        android:maxLength="2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a"
        android:layout_alignBottom="@+id/m"
        android:layout_toEndOf="@+id/m"
        android:inputType="numberDecimal"
        android:numeric="decimal"
        android:layout_marginLeft="20dp"
        android:width="63dp"
        android:hint="AAAA"
        android:maxLength="4" />

</RelativeLayout>
